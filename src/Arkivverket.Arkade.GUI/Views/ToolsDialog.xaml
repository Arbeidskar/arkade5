<Window x:Class="Arkivverket.Arkade.GUI.Views.ToolsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lang="clr-namespace:Arkivverket.Arkade.GUI.Languages"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:util="clr-namespace:Arkivverket.Arkade.GUI.Util"
        xmlns:archiveFormatValidation="clr-namespace:Arkivverket.Arkade.Core.Util.ArchiveFormatValidation;assembly=Arkivverket.Arkade.Core"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="{x:Static lang:ToolsGUI.ToolsDialogTitle}" Height ="500"  Width="750"
        Icon="../Arkade5_2.0.ico"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        d:DataContext="{d:DesignData ToolsDialogViewModel}">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Margin="5,0,0,0">
                <Label FontSize="20" FontWeight="DemiBold"
                       Content="{x:Static lang:ToolsGUI.FormatCheckHeading}"/>
                <Button VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="12" Height="25"
                        Command="{Binding ChooseDirectoryForFormatCheckCommand}"
                        Content="{x:Static lang:ToolsGUI.FormatCheckChooseTargetDirectoryButtonText}"/>
                <TextBlock VerticalAlignment="Center" TextWrapping="Wrap" FontWeight="Bold" Margin="10,5,0,10">
                    <Run Text="{Binding DirectoryForFormatCheck}"
                         Background="Beige" Foreground="Black"/>
                </TextBlock>
                <Button VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" Height="25"
                        Command="{Binding RunFormatCheckCommand}"
                        Content="{x:Static lang:ToolsGUI.FormatCheckRunButtonText}"
                        IsEnabled="{Binding RunButtonIsEnabled}"/>
                <StackPanel Margin="10" Orientation="Horizontal">
                    <ProgressBar Visibility="{Binding ProgressBarVisibility}" Style="{StaticResource MaterialDesignCircularProgressBar}"                     
                                 Value="0"
                                 IsIndeterminate="True"
                                 VerticalAlignment="Center" HorizontalAlignment="Center" Margin="12" Width="19"/>
                    <TextBlock VerticalAlignment="Center" Visibility="{Binding ProgressBarVisibility}" Text="{Binding FormatAnalysisOngoingString}" TextWrapping="Wrap"/>
                </StackPanel>
                <TextBox Margin="10,5,0,10" BorderThickness="0" Background="Transparent" IsReadOnly="True"
                         TextWrapping="Wrap"
                         Text="{Binding FormatCheckStatus, Mode=OneWay}"/>
            </StackPanel>
            <StackPanel Margin="5,0,0,0">
                <Label FontSize="20" FontWeight="DemiBold"
                       Content="{x:Static lang:ToolsGUI.ArchiveFormatValidationSectionHeading}"/>
                <Button VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="12" Height="25"
                        Command="{Binding ChooseFileForArchiveFormatValidationCommand}"
                        Content="{x:Static lang:ToolsGUI.ArchiveFormatValidationChooseFileButtonText}"/>
                <TextBlock VerticalAlignment="Center" TextWrapping="Wrap" FontWeight="Bold" Margin="10,5,0,10">
                    <Run Text="{Binding ArchiveFormatValidationItemPath}"
                         Background="Beige" Foreground="Black"/>
                </TextBlock>
                <StackPanel Orientation="Horizontal">
                    <Label Content="{x:Static lang:ToolsGUI.ArchiveFormatValidationFormatSelectMenuLabel}" />
                    <ComboBox Margin="25 0" Width="90" HorizontalAlignment="Center"
                              ItemsSource="{Binding ArchiveFormatValidationFormats}"
                              SelectedValue="{Binding ArchiveFormatValidationFormats[0]}"
                              SelectedItem="{Binding ArchiveFormatValidationFormat}"
                              Cursor="Hand">
                    </ComboBox>
                    <Button VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" Height="25"
                            Command="{Binding ValidateArchiveFormatCommand}"
                            Content="{x:Static lang:ToolsGUI.ArchiveFormatValidationRunButtonText}"
                            IsEnabled="{Binding ValidateArchiveFormatButtonIsEnabled}"/>
                </StackPanel>
                
                <StackPanel Margin="10" Orientation="Horizontal">
                    <ProgressBar Visibility="{Binding ArchiveFormatValidationStatusDisplay.ProgressBarVisibility}" Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 Value="0"
                                 IsIndeterminate="True"
                                 VerticalAlignment="Center" HorizontalAlignment="Center" Margin="12" Width="19"/>
                    <materialDesign:PackIcon
                        Visibility="{Binding ArchiveFormatValidationStatusDisplay.ResultIconVisibility}"
                        Kind="{Binding ArchiveFormatValidationStatusDisplay.ResultIconKind}"
                        Foreground="{Binding ArchiveFormatValidationStatusDisplay.ResultIconColor}"
                        VerticalAlignment="Center" HorizontalAlignment="Center" Margin="12" Width="19" Height="19"/>
                    <TextBlock VerticalAlignment="Center" Text="{Binding ArchiveFormatValidationStatusDisplay.StatusMessage}" MaxWidth="550" TextWrapping="Wrap" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15"
                IsCancel="True"
                Content="{x:Static lang:ToolsGUI.CloseDialogButtonText}"
                IsEnabled="{Binding CloseButtonIsEnabled, Mode=OneWay}"/>
    </Grid>
</Window>