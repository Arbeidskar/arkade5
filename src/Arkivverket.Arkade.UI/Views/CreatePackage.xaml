<UserControl x:Class="Arkivverket.Arkade.UI.Views.CreatePackage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             xmlns:resources="clr-namespace:Arkivverket.Arkade.UI.Resources"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="700">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Grid.ColumnSpan="2" 
                   Text="{x:Static resources:UI.CreatePackageWindowTitle}" 
                   Style="{StaticResource MaterialDesignTitleTextBlock}" 
                   Margin="10"/>

        <TextBlock Grid.Row="1" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="3"
                   Margin="10" 
                   Style="{StaticResource MaterialDesignSubheadingTextBlock}"
                   Text="{x:Static resources:MetaDataUI.Title}"/>


        <TextBox Grid.Row="2" 
                 Grid.Column="0"
                 Margin="20 5 5 5"
                 materialDesign:HintAssist.Hint="{x:Static resources:MetaDataUI.ArchiveDescription}" 
                 Style="{DynamicResource MaterialDesignFloatingHintTextBox}" />





        <TextBlock Grid.Row="9
                   " Grid.Column="0" Text="{x:Static resources:UI.CreatePackageSelectTypeLabel}" Margin="10"/>
        
        <StackPanel Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="2" Margin="10" Orientation="Horizontal">
            <RadioButton Content="{x:Static resources:UI.CreatePackageTypeSIP}" 
                         IsChecked="{Binding SelectedPackageTypeSip, Mode=TwoWay}"  
                         Style="{StaticResource MaterialDesignRadioButton}" Margin="0 0 8 8" VerticalAlignment="Center" />
            <RadioButton Content="{x:Static resources:UI.CreatePackageTypeAIP}"
                         IsChecked="{Binding SelectedPackageTypeAip, Mode=TwoWay}" 
                         Style="{StaticResource MaterialDesignRadioButton}" Margin="0 0 8 8" VerticalAlignment="Center" />
        </StackPanel>
        
        
        <TextBlock Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" 
                   Text="{Binding StatusMessage}" Margin="10" TextWrapping="Wrap" />

        <StackPanel Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="3" Margin="10 10" Orientation="Horizontal">
            <Button  
                Command="{Binding CreatePackageCommand}"
                Content="{x:Static resources:UI.CreatePackageButtonText}" HorizontalAlignment="Left" Width="130" Height="30" />

            <Button  
                Command="{Binding NewProgramSessionCommand}"
                Content="{x:Static resources:UI.NewProgramSessionButton}" HorizontalAlignment="Left" Width="130" Height="30" Margin="5,0,0,0"/>
        </StackPanel>

    </Grid>
</UserControl>
