<Window x:Class="Arkivverket.Arkade.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:local="clr-namespace:Arkivverket.Arkade.UI.Views"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="TitleLoadedInCodeBehind" Height="532" Width="724"
        Icon="../Arkade5.ico"
        >
    <StackPanel Orientation="Vertical">

        <!-- Menu Header -->
        <Menu x:Name="mainMenu" Height="30" FontSize="14" VerticalAlignment="Top">
            <MenuItem Header="Fil" x:Name="menyItemFile" FontSize="14">
                <MenuItem Header="_Lukk" x:Name="menuItemClose"/>
            </MenuItem>
        </Menu>

        <!-- Main Navigation Panel -->
        <ContentControl prism:RegionManager.RegionName="MainContentRegion"/>

        <!-- Bottom Status Panel -->
        <RichTextBox x:Name="richTextBox" 
                        Margin="0" 
                        VerticalAlignment="Bottom" MaxHeight="400" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Bottom">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </StackPanel>

</Window>
