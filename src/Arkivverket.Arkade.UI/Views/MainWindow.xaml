<Window x:Class="Arkivverket.Arkade.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:local="clr-namespace:Arkivverket.Arkade.UI.Views"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="TitleLoadedInCodeBehind" Height="532" Width="725"
        Icon="../Arkade5.ico"
        >
    <StackPanel Orientation="Vertical" Margin="0,0,-8,0">

        <!-- Menu Header -->
        <Menu x:Name="mainMenu" Height="30" FontSize="14" VerticalAlignment="Top">
            <MenuItem Header="Fil" x:Name="menyItemFile" FontSize="14">
                <MenuItem Header="_Lukk" x:Name="menuItemClose"/>
            </MenuItem>
        </Menu>


        <!-- Navigation Panel: Main Program Interface -->
        <ContentControl prism:RegionManager.RegionName="MainContentRegion" Height="130"/>
        <ContentControl prism:RegionManager.RegionName="StatusContentRegion" Height="195" VerticalAlignment="Bottom" VerticalContentAlignment="Bottom"/>

        <!-- Navigation Panel: Program Status Window -->

    </StackPanel>

</Window>
