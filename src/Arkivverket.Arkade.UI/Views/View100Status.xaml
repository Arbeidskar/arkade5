<UserControl x:Class="Arkivverket.Arkade.UI.Views.View100Status"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             xmlns:util="clr-namespace:Arkivverket.Arkade.UI.Util"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="180"
             d:DesignWidth="500">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
    
        <Label Grid.Row="0" Background="{x:Static util:Colors.Teal500}" Foreground="White" FontSize="20" Content="Status på testkjøring" />
        
        <TextBox Grid.Row="1" Background="{x:Static util:Colors.Gray50}" Text="{Binding LogString}"/>

    </Grid>
</UserControl>
