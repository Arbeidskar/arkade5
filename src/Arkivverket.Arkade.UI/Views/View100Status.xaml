<UserControl x:Class="Arkivverket.Arkade.UI.Views.View100Status"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Arkivverket.Arkade.UI.Views"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="185" Width="725">
    <StackPanel Orientation="Vertical">


        <!-- Bottom Status Panel -->
        <!-- Bottom Status Panel -->
        <Label x:Name="labelStatus" Content="Status log" Margin="0,4,0,0" VerticalAlignment="Top" Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}" Height="31"/>
        <TextBox x:Name="richTextBox" 
                        Margin="0" 
                        VerticalAlignment="Bottom" 
                        MaxHeight="400" 
                        Height="149"
                        Text="{Binding LogString}" Background="#FFAAA4A4"
                        />
    </StackPanel>
</UserControl>
